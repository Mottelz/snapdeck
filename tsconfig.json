{
	"compilerOptions": {
		"target": "ES2020",
    	"module": "nodenext",
		"moduleResolution": "nodenext",
    	"declaration": true,
    	"outDir": "dist",
    	"strict": true,
    	"esModuleInterop": true,
    	"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src"],
}