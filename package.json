{
  "name": "snapdeck",
  "version": "1.1.0",
  "description": "A package to validate Marvel Snap Decks.",
  "author": "Mottelz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mottelz/snapdeck.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs && npm run copy-db",
    "copy-db": "node scripts/copyAssets.mjs",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build",
    "release": "commit-and-tag-version"
  },
  "devDependencies": {
    "@swc/core": "^1.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commit-and-tag-version": "^12.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^29.7.0",
    "jest-util": "^30.2.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  }
}
